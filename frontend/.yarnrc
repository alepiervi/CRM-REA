# Yarn configuration for better reliability during deployment
# Increases timeouts and retries to handle temporary registry issues

# Network timeout in milliseconds (10 minutes)
network-timeout 600000

# Number of retry attempts for failed requests
network-concurrency 8

# Registry configuration with fallback
registry "https://registry.yarnpkg.com"

# Enable strict SSL
strict-ssl true

# Cache folder
cache-folder ".yarn-cache"
